<!DOCTYPE html>
<html>
<head>
  <title>User Registration</title>
  <link rel="stylesheet" href="/register.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="shortcut icon" href="../images/old logo.svg">
  <link rel="Stylesheet" type="text/css" href="/register.css">
</head>
<body>
  <header class="header">
    <nav class="header-nav">
      <img src="/images/hrmlogo.svg" alt="ApnaGhar" class="hrmlogo" onclick="location.href='/'">
      <div class="nav-items">
        <ul>
          <li><a class="nav-links" href="/">Home</a></li>
          <li><a class="nav-links active" href="#hero">Register</a></li>
          <li><a class="nav-links" href="/customerLogin">Login</a></li>
        </ul>
      </div>
    </nav>
  </header>
  
    
    <h1 >User Registration</h1>
  <form method="POST" action="/register" class = "frm">
     <% if (typeof message !== 'undefined') { %>
      <p class="error-message"><strong><%= message%></strong></p>
    <% } %>
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br>

    <label for="gender">Gender:</label>
    <select id="gender" name="gender" required>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select><br>

    <label for="mobile">Contact:</label>
    <input type="text" maxlength="10" pattern="[0-9]{10}"  id="mobile" name="mobile" required  ><br>

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br>

    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" id="confirmPassword" name="confirmPassword" required>

    <input type="submit" value="Register" id="submit" onclick="validatePassword()">
  </form>
<script>
  var password = document.getElementById("password");
   var confirm_password = document.getElementById("confirmPassword");
   var submit = document.getElementById("submit");

   console.log(password);
   console.log(confirm_password);
   function validatePassword() {
      if (password.value !== confirm_password.value) {
        confirm_password.setCustomValidity("Passwords Don't Match");
      } else {
         confirm_password.setCustomValidity('');
      }
   }
 </script>
</body>
</html>
