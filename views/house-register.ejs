<!DOCTYPE html>
<html>
<head>
	<title>start</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" href="../images/house.PNG">
    <link rel="stylesheet" type="text/css" href="/login.css">
    <link rel="stylesheet" type="text/css" href="/houseRegister.css">
  </head>

<body>
  <navbar>
    <nav class="navbar-nav">
     <img src="../images/hrmlogo.svg" alt="ApnaGhar" class="hrmlogo" onclick="location.href='/' ">
        <div class="nav-items">
            <ul>
                <li><a class="nav-links" href="/dashboard">Home</a></li>
                <li><a class="nav-links active" href="#hero"">Add House</a></li>
                <li><a class="nav-links" href="/logout">Logout</a></li>
            </ul>
        </div>  
    </nav>
</navbar>
<div class ="bgImg">
    <img src="https://img.freepik.com/free-photo/small-house-model-pen-blank-clipboard-blue-backdrop_23-2148203965.jpg?w=1060&t=st=1685969552~exp=1685970152~hmac=68844e38c80eefa3c3ddc9ca3d235aea0b090a381b6c738c8e5e2c01e6366e1b" alt="">
  <div id="home" onclick="location.href='/dashboard' ">
    <i class="fa fa-home" aria-hidden="true" color="white"></i>
</div>

<div id="House-register">
  <form id="Form" action="/house-register" method="POST" enctype="multipart/form-data">
    <h3 style="color:green;">Please fill your details here</h3>
    
    <label for="username">Owner Name:</label>
    <input type="text" id="username" name="username" placeholder="Owner Name" required>

    <label for="mob">Mobile Number:</label>
    <input type="text" id="mob" name="mobile" maxlength="10" pattern="[0-9]{10}" placeholder="Mobile Number" required>

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" placeholder="Address" required>

    <div><span style="color:red;"><i><%= housetaken %></i></span></div>
    <br>

    <div id="radio">
      <label for="category">Category:</label>
      <span id="houseRadio">
        <input type="radio" name="category" id="category" value="House">
        <b id="radiotxt">House</b>
      </span>
      <span id="flatRadio">
        <input type="radio" name="category" id="category" value="Flat">
        <b id="radiotxt">Flat</b><br>
      </span>
    </div>
    <div class="form-row">
    <label for="bedroom">BHK:</label>
    <input type="number" id="bedroom" name="BHK" placeholder="BHK" required>

    <label for="rent">Rent:</label>
    <input type="number" id="rent" name="rent" placeholder="Rent" required>
  </div>
    <label for="description">House Description:</label>
    <textarea rows="4" cols="30" name="description" placeholder="House Description"></textarea>

    <div class="form-row">
    <label for="facing">Facing:</label>
    <input type="text" name="facing" placeholder="Facing">

    <label for="locality">Locality:</label>
    <input type="text" list="localities" name="locality" placeholder="Locality">
    <datalist id="localities">
      <option value="Vijay Nagar">
      <option value="Sudama Nagar">
      <option value="Palasia">
      <option value="Geeta Bhawan">
      <option value="Rajwada">
      <option value="Sapna Sangita">
    </datalist>
  </div>

    <p><%=(typeof alertMsg !== 'undefined') ? alertMsg : ''%></p>

    <label for="image">Images:</label>
    <input type="file" name="image" multiple><br>

    <button type="submit" id="submit">Submit</button>
  </form>
</div>

</div>

</body>
<script type="text/javascript">
  $(document).ready(function() {
  $("#bedroom").on("input", function() {
    var bhkInput = $(this).val();
    if (bhkInput === "") {
      $("#bhkError").show();
    } else {
      $("#bhkError").hide();
    }
  });
});


  $(document).ready(function () {
     $("#submit").click(function () {
        if (username.length == 0 || mob.length == 0 || mobile.length == 0 || address.length == 0 || rent.length == 0 || description.length == 0 || locality.length == 0 || facing.length == 0) {
           alert("All Fields are Mandatory");
        }
    });
    $("#homeIcon").hide();
           $("#home").hover(function(){
                $("#homeTxt").hide();
                $("#homeIcon").show();
           },
              function(){
              $("#homeTxt").show();
                $("#homeIcon").hide();
           });
    
    });
     
</script>

</html>